datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  discordId String @unique
  name      String
  avatar    String
  role      String
}

model Character {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  slug        String
  name       I18n
  title      I18n
  rarity     Int
  element    I18n
  weapontype I18n
  substat    I18n
  constellation I18n
  baseStats  BaseStats
  images     CharacterImages
}

model Weapon {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  slug String
  name String
  weaponType String
  rarity Int
  baseatk Int
  substat String
  subvalue Float
  effectname String
  effect String
  r1 Float[]
  r2 Float[]
  r3 Float[]
  r4 Float[]
  r5 Float[]
}

type I18n {
  es String
  en String
}

type CharacterImages {
  portrait Image
  splashart Image
  combat1 Image
  combat2 Image
  combat3 Image
  passive1 Image
  passive2 Image
  passive3 Image
  passive4 Image?
  c1 Image
  c2 Image
  c3 Image
  c4 Image
  c5 Image
  c6 Image
}

type Image {
  name I18n
  info I18n
  src String
}

type BaseStats {
  lvls String[]
  hp Float[]
  atk Float[]
  def Float[]
  critRate Float[]
  critDmg Float[]
  substat Float[]
}


model Talent {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Artifact {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
